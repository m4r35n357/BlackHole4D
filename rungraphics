#!/bin/sh

ic=${1:-''}

d=data
pydir='../../Python/BlackHole4dPython'

java -jar target/blackhole4d-1.11-SNAPSHOT-jar-with-dependencies.jar $ic >$d &
PID=$!
sleep 1
$pydir/filegraphics.py $d $ic&
wait $PID
set $(wc -l $d)
if [ $1 -gt 10000 ]
then
	$pydir/filedata.py $d $(($1 / 2000)) &
	$pydir/fileprogress.py $d $(($1 / 2000)) &
	$pydir/filelissajous.py $d $(($1 / 2000)) &
else
	$pydir/filedata.py $d 1 &
	$pydir/fileprogress.py $d 1 &
	$pydir/filelissajous.py $d 1 &
fi

